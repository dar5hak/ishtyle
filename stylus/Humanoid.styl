// Fonts
$heading-font = Roboto, sans-serif
$base-font = "Roboto Slab", sans-serif
$mono-font = "Droid Sans Mono", monospace

// Colors
$material-red = #f44336
$material-pink = #e91e63
$material-purple = #9c27b0
$material-deep-purple = #673ab7
$material-indigo = #3f51b5
$material-blue = #2196f3
$material-light-blue = #03a9f4
$material-cyan = #00bcd4
$material-teal = #009688
$material-green = #4caf50
$material-light-green = #8bc34a
// $material-lime = #cddc39
// $material-yellow = #ffeb3b
$material-amber = #ffc107
$material-orange = #ff9800
$material-deep-orange = #ff5722
$material-brown = #795548
$material-grey = #9e9e9e
$material-blue-grey = #607d8b

$accent-color = $material-cyan
$base-color = #777
$highlight-bg-color = #f3f3f3

// Global styles
html, body
  margin 1em
  background-color white
  font 16px normal $base-font

body *
  max-width 800px
  margin-left auto
  margin-right auto
  color $base-color

// Headings
h1, h2, h3, h4, h5, h6
  color $accent-color
  font-family $heading-font
  font-weight 400

h1, h2
  font-weight 300

// Links
a
  color $accent-color
  text-decoration none

  &:hover
    text-decoration underline

// Images
img
  display block
  margin 1em auto
  max-width 100%

// Code
code
  display inline-block
  padding .5em
  background-color $highlight-bg-color
  font-family $mono-font

pre code
  display block
  overflow-x scroll
  font-family $mono-font

kbd
  padding 2px 4px
  margin 3px
  background-color $highlight-bg-color
  font-family $mono-font
  border-radius 3px

// Horizontal rule
hr
  margin 2em
  height 1px
  background-color $accent-color
  border-width 0